<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/home"
    tools:context=".Activity.DetailBarang">

    <ImageView
        android:id="@+id/dtl_img"
        android:layout_margin="10dp"
        android:background="@drawable/border"
        android:src="@drawable/img_placeholder"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tv_NM_BG"
        android:layout_margin="15dp"
        android:text="Hello World"
        android:fontFamily="@font/mregular"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Stok Barang : "
            android:textSize="15dp"
            android:fontFamily="@font/mregular"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_stokBrg"
            android:text="10"
            android:fontFamily="@font/mregular"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Harga Barang : "
            android:textSize="15dp"
            android:fontFamily="@font/mregular"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_hargaBrg"
            android:text="10"
            android:textColor="@color/white"
            android:fontFamily="@font/mregular"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/et_brgBeli"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:padding="10dp"
            android:hint="Jumlah pesanan barang"
            android:fontFamily="@font/mregular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_pesanBarang"
            android:layout_margin="10dp"
            android:text="Pesan"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:fontFamily="@font/mregular"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>